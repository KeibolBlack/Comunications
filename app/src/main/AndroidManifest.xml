<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdm.seminarios.comunicaciones" >

        <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="18" />

        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

        <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
        <android:uses-permission
            android:name="android.permission.READ_EXTERNAL_STORAGE"
            android:maxSdkVersion="18" />

        <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <activity
                android:name=".DashboardActivity"
                android:label="@string/app_name" >
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>
            <activity
                android:name=".SocketActivity"
                android:label="@string/title_activity_socket" >
            </activity>
            <activity
                android:name=".HTTPWeatherActivity"
                android:label="@string/title_activity_http" >
            </activity>
            <activity
                android:name=".ProgressBarActivity_handlerconMensaje"
                android:label="@string/title_activity_progress_bar" >
            </activity>
            <activity
                android:name=".ProgressBarActivity_handlerconRunnable"
                android:label="@string/title_activity_progress_bar_activity_con_runnable" >
            </activity>
        </application>

    </manifest>

